<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Campus Tours - University of Wolverhampton</title>
  <link rel="stylesheet" href="../css/style.css">
</head>
<body>
  <!-- Header Section -->
  <header class="header">
    <div class="header-logo">
      <a href="homepage.php">
        <img src="../images/UoW logo.svg" alt="University of Wolverhampton Logo">
      </a>
    </div>
    <div class="header-support" id="support-icon" title="Support">
      <span>?</span>
    </div>
    <div class="header-logout">
      <button id="logout-button">Logout</button>
    </div>
  </header>

  <!-- Main Content -->
  <main>
    <div class="tour-message">
      <p>
        Interested in a campus tour? Just head to the desk marked <strong>Tours</strong> and let a member of staff know.
        Tours start every 30 minutesâ€”on the hour and at half past. We look forward to showing you around!
      </p>
    </div>
  </main>

  <!-- Support Info (hidden by default) -->
  <div id="support-info" class="support-info hidden">
    <h2>Support Information</h2>
    <p>
      For assistance, please call 0123-456-789 or email <em>support@university.ac.uk</em>.
    </p>
  </div>

  <!-- Scripts -->
  <script>
    // Toggle support info
    const supportIcon = document.getElementById('support-icon');
    const supportInfo = document.getElementById('support-info');

    supportIcon.addEventListener('click', () => {
      supportInfo.classList.toggle('hidden');
    });

    // Logout button logic
    const logoutButton = document.getElementById('logout-button');

    logoutButton.addEventListener('click', () => {
      fetch('logout.php', { method: 'POST' })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            window.location.href = '../index.php';
          } else {
            alert('Logout failed: ' + data.message);
          }
        })
        .catch(error => {
          console.error('Logout error:', error);
          alert('An error occurred while logging out.');
        });
    });
  </script>
</body>
</html>