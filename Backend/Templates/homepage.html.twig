<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>University of Wolverhampton Open Day</title>
  <link rel="stylesheet" href="../css/style.css">
</head>
<body>
  <!-- Header Section -->
  <header>
    <div class="header-logo">
      <img src="../images/UoW logo.svg" alt="University of Wolverhampton Logo">
    </div>
    <div class="header-support" id="support-icon" title="Support">
      <span>?</span>
    </div>
    <div class="header-logout">
      <button id="logout-button">Logout</button>
    </div>
  </header>

  <!-- Support Info (hidden by default) -->
  <div id="support-info" class="support-info hidden">
    <h2>Support Information</h2>
    <p>
      <!-- Placeholder text will get support info from database for easy updating -->
      For assistance, please call 0123-456-789 or email 
      <em>support@university.ac.uk</em>.
    </p>
  </div>

  <!-- Main Content (Dashboard Navigation) -->
  <main>
    <div class="dashboard-container">
      <h1>Welcome to the University Open Day</h1>
      <p>Select an option below:</p>

      <div class="dashboard-grid">
        <a href="courses.php" class="dashboard-item">
          <img src="../images/icon-courses.svg" alt="Courses">
          <span>Courses</span>
        </a>
        <a href="map.php" class="dashboard-item">
          <img src="../images/icon-map.svg" alt="Campus Map">
          <span>Campus Map</span>
        </a>
        <a href="tours.php" class="dashboard-item">
          <img src="../images/icon-tours.svg" alt="Campus Tours">
          <span>Tours</span>
        </a>
        <a href="directions.php" class="dashboard-item">
          <img src="../images/icon-directions.svg" alt="Directions">
          <span>Directions To Campus</span>
        </a>
        <a href="https://www.ucas.com/explore/unis/0a5af9c9/university-of-wolverhampton/courses?studyYear=2025" class="dashboard-item">
          <img src="../images/icon-apply.svg" alt="Apply">
          <span>Apply Now</span>
        </a>
      </div>
    </div>
  </main>

  <!-- Simple toggle script for Support Info -->
  <script>
    const supportIcon = document.getElementById('support-icon');
    const supportInfo = document.getElementById('support-info');

    supportIcon.addEventListener('click', () => {
      supportInfo.classList.toggle('hidden');
    });

      // Logout button logic
    const logoutButton = document.getElementById('logout-button');

    logoutButton.addEventListener('click', () => {
      fetch('logout.php', { method: 'POST' })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            // Only redirect if logout was successful
            window.location.href = '../index.php';
          } else {
            alert('Logout failed: ' + data.message);
          }
        })
        .catch(error => {
          console.error('Logout error:', error);
          alert('An error occurred while logging out.');
        });
    });
  </script>

</body>
</html>
